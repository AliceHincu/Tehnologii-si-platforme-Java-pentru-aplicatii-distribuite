<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <servlet>
        <servlet-name>view-all-movies</servlet-name>
        <servlet-class>servlets.ViewAllMoviesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>purchase-movie</servlet-name>
        <servlet-class>servlets.PurchaseMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>show-user-movies</servlet-name>
        <servlet-class>servlets.ViewUserMoviesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>view-all-movies</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>view-all-movies</servlet-name>
        <url-pattern>/view-movies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>purchase-movie</servlet-name>
        <url-pattern>/purchase-movie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>show-user-movies</servlet-name>
        <url-pattern>/show-user-movies</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>view-movies</welcome-file>
    </welcome-file-list>
</web-app>